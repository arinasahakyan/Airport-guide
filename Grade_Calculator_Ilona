JS
function calculateGrade() {
  var Homework = 0
  var Quiz = 0
  var Project1 = 0
  var Project2 = 0

  var hwpercent = perseInt(document.getElementById("homeworkpercent").innerHTML)

  var homework_grade = parseFloat(document.getElementById("hwGrade").value)

  var q_percent = perseInt(document.getElementById("quizpercent").innerHTML)

  var q_grade = parseFloat(document.getElementById("quizGrade").value)

  var p1_percent = perseInt(document.getElementById("project1percent").innerHTML)

  var p1_grade = parseFloat(document.getElementById("P1Grade").value)

  var p2_percent = perseInt(document.getElementById("project2percent").innerHTML)

  var p2_grade = parseFloat(document.getElementById("P2Grade").value)

  var calculategrade = homework_grade + q_grade + p1_grade + p2_grade console.log(calculategrade)

  document.getElementById("currentgradebutton").innerHTML = calculategrade
}
